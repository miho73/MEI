<ContentDialog
    x:Class="MEI.UI.MakeClass"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MEI.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    x:Uid="MakeClassDialog">

    <Grid Margin="0,10,0,10">
        <TextBlock x:Uid="MakeClassName" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   TextWrapping="Wrap"
                   FontSize="15" 
                   FontWeight="Bold"/>

        <TextBox Margin="0,20,0,0"
                 VerticalAlignment="Top"
                 Text="{x:Bind Path=ClassName,Mode=TwoWay}"/>


        <TextBlock x:Uid="MakeClassLink" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   TextWrapping="Wrap"
                   FontSize="15" 
                   FontWeight="Bold" 
                   Margin="0,57,0,0"/>

        <TextBox Margin="0,76,0,0"
                 VerticalAlignment="Top"
                 Text="{x:Bind Path=ClassLink,Mode=TwoWay}"/>
    </Grid>
</ContentDialog>
